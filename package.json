{
  "name": "scss-in-php",
  "displayName": "SCSS IN PHP",
  "description": "Support for PHP tags in JavaScript and CSS/SCSS files",
  "version": "0.2.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.90.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/huny0522/scss-in-php.git"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "php-css-scss",
        "aliases": ["PHP CSS/SCSS", "php-css-scss"],
        "extensions": [".css.php"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "php-css-scss",
        "scopeName": "source.php-css-scss",
        "path": "./syntaxes/php-css-scss.tmLanguage.json",
        "embeddedLanguages": {
          "source.php": "php",
          "source.css.scss": "scss"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
